{
  "name": "musille",
  "version": "0.1.0",
  "description": "The Wordpress Theme for the LJO Hamburg.",
  "scripts": {
    "clean": "rm -rf build/*",
    "build": "gulp",
    "lint": "npm run lint:php && npm run lint:js && npm run lint:scss",
    "lint:php": "./vendor/bin/phpcs functions.php includes templates",
    "lint:js": "eslint --no-error-on-unmatched-pattern scripts",
    "lint:scss": "stylelint --allow-empty-input styles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ljo-hamburg/musille.git"
  },
  "keywords": [
    "wordpress",
    "orchestra"
  ],
  "author": "Kim Wittenburg",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ljo-hamburg/musille/issues"
  },
  "homepage": "https://github.com/ljo-hamburg/musille#readme",
  "devDependencies": {
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "gulp": "^4.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "stylelint": "^13.4.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.php": "./vendor/bin/phpcs",
    "*.{js,jsx}": "eslint",
    "*.{css,scss}": "stylelint"
  }
}
