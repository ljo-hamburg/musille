{#
The main page header.
#}

<header class="wp-block-musille-header is-style-{{ page.header_style }}
               {% if not page.header_background %}no-background{% endif %}"
        {% if page.header_style in ["subtitle", "fancy"] and page.header_background %}
          style="background-image: url('{{ page.header_background.src }}');"
        {% endif %}
>
  <div class="overlay"></div>
  <div class="content">
    <h1 class="title">{{ page.title }}</h1>
    {% if page.subtitle %}
      <div class="subtitle">{{ page.subtitle }}</div>
    {% endif %}

    {% if function("is_single") %}
      <div class="meta">
        {{ __("%s by %s in %s", "musille")|format(
          post.date,
          '<a href="'~post.author.link~'">'~post.author.display_name~'</a>',
          '<a href="'~post.category.link~'">'~post.category.name~'</a>'
        ) }}
      </div>
    {% endif %}
  </div>
</header>
