{#
Renders a list of posts. This template is roughly equivalent to the WordPress index.php
template.
#}
{% extends "template-sidebar.twig" %}

{% block content %}
  <div class="post-list">
    {% for post in posts %}
      {% include "partials/post-item.twig" with {'post': post} %}
    {% else %}
      <h2 class="message">{{ __("Nothing to see hereâ€¦", "musille") }}</h2>
    {% endfor %}
    {% block pagination %}
      {% include "partials/pagination.twig" %}
    {% endblock %}
  </div>
{% endblock %}
